         DFHMDF POS=(5,20),                                            X
               LENGTH=14,                                              X
               ATTRB=(NORM,PROT,ASKIP),                                X
               COLOR=DEFAULT,                                          X
               INITIAL='1. List Hotels'
         DFHMDF POS=(6,20),                                            X
               LENGTH=12,                                              X
               ATTRB=(NORM,PROT,ASKIP),                                X
               COLOR=DEFAULT,                                          X
               INITIAL='2. Book Room'
ITEM-REF DFHMDF POS=(6,42),                                            X
               LENGTH=4,                                               X
               JUSTIFY=(ZERO),                                         X
               ATTRB=(NORM,UNPROT,FSET),                           @D1AX
               COLOR=TURQUOISE,                                        X
               HILIGHT=UNDERLINE
         DFHMDF POS=(6,47),                                            X
               LENGTH=1,                                               X
               ATTRB=ASKIP
         DFHMDF POS=(7,20),                                            X
               LENGTH=7,                                               X
               ATTRB=(NORM,PROT,ASKIP),                                X
               COLOR=DEFAULT,                                          X
               INITIAL='3. Exit'
MSG1     DFHMDF POS=(23,1),                                            X
               LENGTH=79,                                              X
               ATTRB=(BRT,PROT),                                       X
